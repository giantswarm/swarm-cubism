{
  "app_name": "$app",
  "services": [
    {
      "service_name": "webserver",
      "components": [
        {
          "component_name": "flask",
          "image": "registry.giantswarm.io/$org/$app",
          "ports": [5000],
          "domains": {
            "$domain": 5000
          },
          "env": {
            "token": "$token"
          },
          "scaling_policy": {
            "min": 3
          },
          "dependencies": [
            {
              "name": "redis",
              "port": 6379
            }
          ]
        },
        {
          "component_name": "redis",
          "image": "redis",
          "ports": [6379]
        }
      ]
    }
  ]
}
